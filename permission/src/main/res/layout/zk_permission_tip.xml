<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="360dp"
    android:layout_gravity="center"
    android:layout_marginBottom="20dp"
    android:background="@color/zk_ysdk_permission_background"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zk_ysdk_permission_tip"
        android:textColor="@color/zk_ysdk_permission_text_color"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">


        <Button
            android:layout_gravity="center"
            android:id="@+id/zk_ysdk_permission_tip_btn_id"
            android:layout_width="85dp"
            android:layout_height="28dp"
            android:background="@color/zk_ysdk_permission_btn_color"
            android:text="@string/zk_ysdk_permission_tip_btn"
            android:textColor="@color/zk_ysdk_permission_btn_text__color"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>